<header class="bg-gray-100 border-t-2 border-b-2 border-gray-300 mb-6">
  <div class="max-w-4xl mx-auto sm:px-6 lg:px-8">
    <h1 class="py-6 text-2xl md:text-4xl text-pink-400 font-bold">
      Gestion des utilisateurs
    </h1>
  </div>
</header>

<div class="max-w-4xl mx-auto sm:px-6 lg:px-8 mb-12">
  <div class="flex flex-col">
    <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
      <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
        <table class="min-w-full">
          <thead>
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200"><%= user.email %></td>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                Est actuellement un simple utilisateur.
                <p>
                  <%= render 'administration/teachers/promotings/form', user: user %>
                </p>
                <p>
                  <%= render 'administration/responsible_parents/promotings/form', user: user %>
                </p>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
