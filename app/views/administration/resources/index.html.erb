<header class="bg-gray-100 border-2 border-gray-300 mb-6">
  <div class="max-w-4xl mx-auto sm:px-6 lg:px-8">
    <h1 class="py-6 text-2xl md:text-4xl text-pink-400 font-bold">
      Gestion des ressources
    </h1>
  </div>
</header>


<div class="max-w-4xl mx-auto sm:px-6 lg:px-8 mb-12">
  <div class="flex flex-col">
    <div class="btn-green mb-6">
    <%= link_to "Ajouter une ressource", new_administration_resource_path %>
    </div>
    <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
      <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
        <table class="min-w-full">
          <thead>
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Nom</th>
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Classe</th>
            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Edition</th>
          </thead>
          <tbody>
            <% @resources.each do |resource| %>
            <tr>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200"><%= link_to resource.name, resource.url %></td>
              <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200"><%= resource.classroom %></td>
              <td>
                <%= link_to content_tag(:i, "", class: 'fas fa-edit'), edit_administration_resource_path(resource) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
