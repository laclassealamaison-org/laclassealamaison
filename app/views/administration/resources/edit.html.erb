<header class="bg-gray-100 border-2 border-gray-300 mb-6">
  <div class="max-w-4xl mx-auto sm:px-6 lg:px-8">
    <h1 class="py-6 text-2xl md:text-4xl text-pink-400 font-bold">
      Modifier cette ressource
    </h1>
  </div>
</header>

<div class="max-w-4xl mx-auto sm:px-6 lg:px-8 mb-12">
  <div class="flex flex-col">
    <%= form_for(@resource, url: administration_resource_path(@resource), method: :patch) do |f| %>
      <div class="field">
        <label for="first_name">Nom</label>
        <%= f.text_field :name, placeholder: "Nom", class: 'appearance-none block w-full text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
      <div class="field">
        <label for="last_name">Classe</label>
        <%= f.collection_select :classroom_id, Classroom.all,:id,:name %>
      </div>
      <div class="field">
        <label for="email">Description</label>
        <%= f.text_field :description, placeholder: "Description", class: 'appearance-none block w-full text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
      <div class="field">
        <label for="email">URL</label>
        <%= f.text_field :url, placeholder: "URL", class: 'appearance-none block w-full text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500' %>
      </div>
      <div class="field">
        <input type="submit" name="" value="Enregistrer", class='btn-green'>
      </div>
      <div class="field">
      <%=link_to 'Supprimer cette ressource', administration_resource_path(@resource),method: :delete, data: {confirm: "Etes-vous sÃ»r ?"}, class: 'btn-red' %>
      </div>
    <% end %>
  </div>
