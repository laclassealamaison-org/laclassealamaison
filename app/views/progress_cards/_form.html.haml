= form_for @progress_card, url: url_for([@progress_card]) do |f|
  .field
    = f.label :child, for: :child_id
    = f.collection_select :child_id, Child.all, :id, :name, {}, class: 'block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline'
  .field
    = f.label :content, for: :content
    = f.text_area :content, placeholder: "RÃ©digez votre fiche de suivi", class: 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500'
  = f.submit  "Enregistrer la fiche", class: 'btn-green'
  = link_to "Annuler", teachers_courses_path, class: 'btn-gray'

